<UserControl x:Class="QuickCode.Modules.ContentRegion.Views.ContentRegionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:QuickCode.Modules.ContentRegion.Views"
             xmlns:prism="http://prismlibrary.com/" 
             xmlns:hc="https://handyorg.github.io/handycontrol"
             prism:ViewModelLocator.AutoWireViewModel="True" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Grid.ColumnSpan="3" Orientation="Horizontal" >
            
            <Button 
                Width="80"                
                Margin="20 0 10 0"
                HorizontalAlignment="Left"
                Content="Start" 
                Command="{Binding StartCommand}"
                IsEnabled="{Binding IsConnected, Converter={StaticResource Boolean2BooleanReConverter}}"
                Style="{DynamicResource ButtonDefault.Small}"/>

            <CheckBox Content="Enable Debug"
                      VerticalAlignment="Center"
                      IsEnabled="{Binding IsConnected, Converter={StaticResource Boolean2BooleanReConverter}}"
                      IsChecked="{Binding EnableDebug}"
                      />

            <Button 
                Width="80"
                Margin="10 0 10 0"
                HorizontalAlignment="Left"
                Content="Stop" 
                Command="{Binding StopCommand}"
                Style="{DynamicResource ButtonDefault.Small}"/>

            <Button 
                Width="40"                
                Margin="10 0 10 0"
                HorizontalAlignment="Left"
                Content="next" 
                IsEnabled="{Binding EnableDebug}"
                Command="{Binding SendDebuggerCommand}"
                CommandParameter="n"
                Style="{DynamicResource ButtonDefault.Small}"/>

            <Button 
                Width="40"                
                Margin="10 0 10 0"
                HorizontalAlignment="Left"
                Content="llist" 
                IsEnabled="{Binding EnableDebug}"
                Command="{Binding SendDebuggerCommand}"
                CommandParameter="ll"
                Style="{DynamicResource ButtonDefault.Small}"/>

            <Button Width="50"    
                    Margin="10 0 10 0"
                    HorizontalAlignment="Left"
                    Content="restart"
                    IsEnabled="{Binding EnableDebug}"
                    Command="{Binding SendDebuggerCommand}"
                    CommandParameter="restart"
                    Style="{DynamicResource ButtonDefault.Small}"/>

            <Button Width="40"
                    Margin="10 0 10 0"
                    HorizontalAlignment="Left"
                    Content="quit" 
                    IsEnabled="{Binding EnableDebug}"
                    Command="{Binding SendDebuggerCommand}"
                    CommandParameter="q"
                    Style="{DynamicResource ButtonDefault.Small}"/>

            <CheckBox Content="IsConnected"
                      HorizontalAlignment="Right"
                      VerticalAlignment="Center"
                      IsEnabled="False"
                      IsChecked="{Binding IsConnected}"/>

        </StackPanel>

        <TextBox Grid.Row="1"
                 Grid.Column="0"
                 Margin="10 10 10 10"
                 Padding="10"
                 FontSize="14"
                 FontFamily="Consolas"
                 FontWeight="Medium"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 VerticalContentAlignment="Top"

                 Text="{Binding SourceCode, UpdateSourceTrigger=PropertyChanged}"/>


        <GridSplitter Grid.Column="1"
                      Grid.Row="1"
                      Width="3" 
                      Margin="0 10 0 10"
                      HorizontalAlignment="Stretch"
                      Background="{DynamicResource BorderBrush}"   />
        
        <TextBox x:Name="ExecutionResultEditor"
                 Grid.Row="1"
                 Grid.Column="2"
                 Margin="10"
                 Padding="10"
                 FontSize="14"
                 FontFamily="Consolas"
                 FontWeight="Medium"
                 TextWrapping="Wrap"
                 IsReadOnly="True"
                 VerticalContentAlignment="Top"
                 
                 Text="{Binding ExecutionResult, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
    </Grid>
</UserControl>
